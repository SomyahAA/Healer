<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/cardViewTab"
        app:layout_constraintStart_toStartOf="@+id/cardViewTab">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/sycName"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="176dp"
                    android:layout_marginTop="24dp"
                    android:text="Name"
                    android:textAlignment="textStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sycSpecialty"
                    android:layout_width="144dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="8dp"
                    android:text="specialty"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.907"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sycName" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="135dp"
                    android:layout_height="105dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/doc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.078"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/psyExpYears"
                    android:layout_width="82dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="80dp"
                    android:text="experienceYears"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sycSpecialty" />

                <TextView
                    android:id="@+id/psyPrice"
                    android:layout_width="88dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="192dp"
                    android:layout_marginTop="131dp"
                    android:layout_marginBottom="11dp"
                    android:text=" 100 $$"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toTopOf="@+id/ConsultBTN"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/ConsultBTN"
                    android:layout_width="186dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="Consult now"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/psyPrice" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="69dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="6dp"
                    android:text="years"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.642"
                    app:layout_constraintStart_toEndOf="@+id/psyExpYears"
                    app:layout_constraintTop_toBottomOf="@+id/sycSpecialty"
                    app:layout_constraintVertical_bias="0.018" />

                <LinearLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:layout_marginBottom="77dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ConsultBTN">

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="18dp"
                        android:background="#88888888" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="18dp"
                        android:text="Bio"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/primaryTextColor" />

                    <TextView
                        android:id="@+id/psyBio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:text="Small plates, salad and sandwiches an intimate setting with 12 indoor seats plus patio seating."
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/secondaryTextColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="18dp"
                        android:background="#88888888" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="18dp"
                        android:text="Available Appointment"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/primaryTextColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/bac"
                            android:elevation="0dp"
                            android:text="5:30PM"
                            android:textColor="@color/veryLightGrey"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/button_background_selected"
                            android:elevation="0dp"
                            android:text="7:30PM"
                            android:textColor="#3F51B5"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/bac"
                            android:elevation="0dp"
                            android:text="5:30PM"
                            android:textColor="@color/veryLightGrey"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/bac"
                            android:elevation="0dp"
                            android:text="5:30PM"
                            android:textColor="@color/veryLightGrey"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

